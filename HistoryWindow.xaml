<Window
    x:Class="FlowerPlayer.HistoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="歷史清單">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Column Headers -->
            <RowDefinition Height="*"/>    <!-- List -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="歷史清單" FontSize="20" Margin="10"/>

        <!-- Column Headers -->
        <Grid Grid.Row="1" Background="#F0F0F0" Height="30" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="檔案名稱" FontWeight="SemiBold" Margin="10,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="長度" FontWeight="SemiBold" Margin="10,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="修改日期" FontWeight="SemiBold" Margin="10,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="目錄" FontWeight="SemiBold" Margin="10,0" VerticalAlignment="Center"/>
        </Grid>

        <!-- ListView -->
        <ListView Grid.Row="2" x:Name="HistoryListView"
                  Margin="10,0,10,10"
                  SelectionMode="Extended"
                  DoubleTapped="HistoryListView_DoubleTapped"
                  RightTapped="HistoryListView_RightTapped"/>
    </Grid>
</Window>
