<Window
    x:Class="FlowerPlayer.PlaylistWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Playlist">

    <Grid AllowDrop="True" DragOver="Grid_DragOver" Drop="Grid_Drop">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Splitter -->
            <RowDefinition Height="*"/>    <!-- Playlist -->
            <RowDefinition Height="Auto"/> <!-- Splitter -->
            <RowDefinition Height="150"/>  <!-- History -->
        </Grid.RowDefinitions>

        <MenuBar Grid.Row="0">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="開啟檔案..." Click="OpenFile_Click"/>
                <MenuFlyoutItem Text="Save Range As..." Click="SaveRange_Click"/>
            </MenuBarItem>
            <MenuBarItem Title="Settings">
                <MenuFlyoutItem Text="Open Settings..." Click="OpenSettings_Click"/>
            </MenuBarItem>
        </MenuBar>

        <Border Grid.Row="1" Height="2" Background="Gray"/>

        <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.PlaylistItems}" Header="Playlist">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border Grid.Row="3" Height="2" Background="Gray"/>

        <ListView Grid.Row="4" ItemsSource="{x:Bind ViewModel.HistoryItems}" Header="History">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Foreground="Gray"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
