<Window x:ConnectionId='1'
    x:Class="FlowerPlayer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Grid x:ConnectionId='2' x:Name="RootGrid" Padding="20"                                 >
        <StackPanel Spacing="20">
            <TextBlock Text="General Settings" Style="{StaticResource TitleTextBlockStyle}"/>
            
            <CheckBox x:ConnectionId='3' Content="Auto Play on Open" 
                                                                                />
            
            <CheckBox x:ConnectionId='4' Content="Resume Last File" 
                                                                                />
            
            <CheckBox x:ConnectionId='5' Content="依播放清單順序，播放下一個檔案" 
                                                                              />
            
            <MenuFlyoutSeparator/>
            
            <TextBlock Text="Smart Skip Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>
            
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="10">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Play Duration (seconds):" VerticalAlignment="Center"/>
                <NumberBox x:ConnectionId='6' Grid.Row="0" Grid.Column="1" Width="100" 
                                                                                        
                           SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="5" Minimum="1"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Skip Duration (seconds):" VerticalAlignment="Center"/>
                <NumberBox x:ConnectionId='7' Grid.Row="1" Grid.Column="1" Width="100" 
                                                                                        
                           SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="5" Minimum="1"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>

