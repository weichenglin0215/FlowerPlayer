<UserControl
    x:Class="FlowerPlayer.Controls.RangeSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="30">
        <!-- Track -->
        <Rectangle Height="6"  VerticalAlignment="Center" Margin="10,0"/>
        
        <!-- Range Highlight -->
        <Rectangle x:ConnectionId='2' Height="4" Fill="Blue" VerticalAlignment="Center" Margin="10,0"
                   HorizontalAlignment="Left" x:Name="RangeHighlight"/>

        <!-- Progress Slider (Standard Slider for seeking) -->
        <Slider x:ConnectionId='3' x:Name="MainSlider" VerticalAlignment="Center" Margin="0,0,0,0"
                                                      
                Header=""
                IsThumbToolTipEnabled="False"
                Canvas.ZIndex="5"/>

        <!-- Overlay Canvas for Thumbs to support absolute positioning -->
        <Canvas x:ConnectionId='4' x:Name="ThumbsOverlay" Canvas.ZIndex="10">
            <!-- Start Thumb (Triangle) -->
            <Canvas x:ConnectionId='5' x:Name="StartThumbCanvas">
                <Polygon x:ConnectionId='8' Points="0,0 -20,25 0,25" Fill="Yellow" Stroke="Black" StrokeThickness="1"
                         Canvas.Top="15" IsHitTestVisible="True"
                                                                                                                                             />
            </Canvas>

            <!-- End Thumb (Triangle) -->
            <Canvas x:ConnectionId='6' x:Name="EndThumbCanvas">
                <Polygon x:ConnectionId='7' Points="0,0 0,25 20,25" Fill="Yellow" Stroke="Black" StrokeThickness="1"
                         Canvas.Top="15" IsHitTestVisible="True"
                                                                                                                                           />
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>

