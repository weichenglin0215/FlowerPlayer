<Window
    x:Class="FlowerPlayer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Grid Padding="20">
        <StackPanel Spacing="20">
            <TextBlock Text="General Settings" Style="{StaticResource TitleTextBlockStyle}"/>
            
            <CheckBox Content="Auto Play on Open" 
                      IsChecked="{x:Bind ViewModel.AutoPlayOnOpen, Mode=TwoWay}"/>
            
            <CheckBox Content="Resume Last File" 
                      IsChecked="{x:Bind ViewModel.ResumeLastFile, Mode=TwoWay}"/>
            
            <MenuFlyoutSeparator/>
            
            <TextBlock Text="Smart Skip Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>
            
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="10">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Play Duration (seconds):" VerticalAlignment="Center"/>
                <NumberBox Grid.Row="0" Grid.Column="1" Width="100" 
                           Value="{x:Bind ViewModel.SmartSkipPlayDuration, Mode=TwoWay}"
                           SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="5" Minimum="1"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Skip Duration (seconds):" VerticalAlignment="Center"/>
                <NumberBox Grid.Row="1" Grid.Column="1" Width="100" 
                           Value="{x:Bind ViewModel.SmartSkipSkipDuration, Mode=TwoWay}"
                           SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="5" Minimum="1"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
